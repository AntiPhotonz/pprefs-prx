TARGET = pprefs_lite
PSP_FW_VERSION = 500
BUILD_PRX = 1

ifeq ($(LANGUAGE),japanese)
OPTION_FLAGS =
else
OPTION_FLAGS = -DPPREFS_LANGUAGE_ENGLISH
endif

OBJS =	\
	main.o \
	file.o \
	memory.o \
	pprefsmenu.o \
	button.o \
	exports.o \
	conf.o \
	common.o \
	configmenu.o \
	nidresolve.o \
	sepluginstxt.o \
	backupmenu.o \
	fileselecter.o \
	syslibc/syslibc.o \
	syslibc/strncasecmp.o \
	syslibc/qsort.o \




PRX_EXPORTS = exports.exp
USE_KERNEL_LIBC	= 1
USE_KERNEL_LIBS	= 1

CLASSG_LIBS = libs
#CLASSG_LIBS = libc




INCDIR = $(CLASSG_LIBS)
CFLAGS = -Os -G0 -Wall -fno-strict-aliasing -fno-builtin-printf -DUSE_KERNEL_LIBRARY -DPPREFS_LITE $(OPTION_FLAGS)
CXXFLAGS = $(CFLAGS) -fno-exceptions -fno-rtti
ASFLAGS = $(CFLAGS)

LIBDIR			= 
LDFLAGS		=	-mno-crt0 -nostartfiles

ifeq ($(LANGUAGE),japanese)
LIBS += libmenuj.a
else
LIBS += libmenue.a
endif

LIBS += -lpspsystemctrl_kernel -lm -lpspkubridge -lpspusbstor 

LIBS += safelySuspend.a
PSPSDK=$(shell psp-config --pspsdk-path)
include $(PSPSDK)/lib/build_prx.mak

all:

